<%- include('static/header'); %>

<div class="row mt-5 mb-5">
    <div class="col-lg-6">
    <div class="card">
     <div class="card-header text-uppercase">BAN USER</div>
        <div class="card-body">
        <h5>User ID:</h5>
        <input type="text" autocomplete="off" class="form-control" placeholder="Enter a user id." id="userid-ban">
        </div>
        <div class="card-footer">
            <button class="float-right btn btn-danger waves-effect waves-light" type="button" onclick="ban($('#userid-ban').val());">Ban</button>
        </div>
    </div>
   </div>
   <div class="col-lg-6">
    <div class="card">
     <div class="card-header text-uppercase">UNBAN USER</div>
     <div class="card-body">
        <h5>User ID:</h5>
        <input type="text" autocomplete="off" class="form-control" placeholder="Enter a user id." id="userid-unban">
        </div>
        <div class="card-footer">
            <button class="float-right btn btn-primary waves-effect waves-light" type="button" onclick="unban($('#userid-unban').val());">Unban</button>
        </div>
    </div>
   </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script>
      function ban(id) {  
        $.ajax({
          type: "POST",
          url: "/admin/posts/ban",
          data: {id: id},
          dataType: "json",
          success: function (response) {
            if (response.status === true) {
              Swal.fire("Great!", "You have successfully banned this user!", "success");
            }
            if (response.status === false) {
              Swal.fire("Oops!", response.message, "error");
            }
          }
        });
      }
  </script>
		  
<%- include('static/footer'); %>